BRANCH="$(git rev-parse --abbrev-ref HEAD)"
if [[ "$BRANCH" != "main" ]]; then
  exit 0
fi

if [ -f ".husky/_/history" ]; then
  lastHash=$(cat ./.husky/_/history)
  isUpdated=$(git diff $lastHash HEAD -- ./package.json)
  if [ "$isUpdated" != "" ]; then
    yarn install
  fi
else
  yarn install
fi

echo $(git rev-parse HEAD) > ./.husky/_/history
