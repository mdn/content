          }
        },
        "then": {
          "properties": {
            "page-type": {
              "enum": [
                "guide",
                "landing-page",
                "web-api-overview",
                "web-api-interface",
                "web-api-constructor",
                "web-api-instance-method",
                "web-api-instance-property",
                "web-api-static-method",
                "web-api-static-property",
                "web-api-event",
                "webgl-extension",
                "webgl-extension-method"
